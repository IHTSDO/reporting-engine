<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="jms-api-context.xml"/>

	<import resource="review-context.xml"/>

	<import resource="cdo-context.xml"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.SpringConfiguration"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.TaskService">
		<constructor-arg>
			<bean class="org.ihtsdo.snowowl.authoring.single.api.service.jira.OAuthJiraClientFactory">
				<constructor-arg value="+{jira.url}"/>
				<constructor-arg value="+{jira.consumerKey}"/>
				<constructor-arg value="#{systemProperties['osgi.sharedConfiguration.area']}/+{jira.privateKeyName}"/>
			</bean>
		</constructor-arg>
		<constructor-arg value="+{jira.reviewer.field}"/>
	</bean>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.eventhandler.ReviewMessageSentHandler"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.BranchService"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.ClassificationService"/>

	<bean class="org.ihtsdo.otf.rest.client.SnowOwlRestClient">
		<constructor-arg value="+{snowowl.url}"/>
		<constructor-arg value="+{snowowl.username}"/>
		<constructor-arg value="+{snowowl.password}"/>
		<property name="reasonerId" value="+{snowowl.reasonerId}"/>
		<property name="logPath" value="+{snowowl.log.path}"/>
		<property name="rolloverLogPath" value="+{snowowl.rolloverLog.path}"/>
		<property name="importTimeoutMinutes" value="+{snowowl.import.timeout}"/>
		<property name="classificationTimeoutMinutes" value="+{snowowl.classification.timeout}"/>
	</bean>
	
	<bean class="org.ihtsdo.otf.rest.client.OrchestrationRestClient">
		<constructor-arg value="+{orchestration.url}"/>
		<constructor-arg value="+{orchestration.username}"/>
		<constructor-arg value="+{orchestration.password}"/>
	</bean>
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="#{systemProperties['osgi.sharedConfiguration.area']}/single_authoring.properties"/>
		<property name="placeholderPrefix" value="+{"/>
	</bean>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.SnowOwlHelper"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.UiStateService"/>
	
	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.ValidationService" init-method="init"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.validation.SnomedBrowserValidationService"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.dao.ArbitraryJsonService"/>
	
	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.dao.CdoStore" init-method="init" />


	<!-- Notifications and user monitors -->
	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.NotificationService"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.monitor.MonitorService"/>

	<bean class="org.ihtsdo.snowowl.authoring.single.api.service.monitor.MonitorFactory"/>

	<!-- Security -->
	<bean factory-bean="securityServiceFactory" factory-method="getSecurityService">
		<constructor-arg ref="securityServiceStubMode" />
	</bean>

	<bean class="org.ihtsdo.otf.im.utility.SecurityServiceFactory" name="securityServiceFactory">
		<property name="onlineImplementation">
			<bean class="org.ihtsdo.otf.im.utility.SecurityServiceImpl"/>
		</property>
		<property name="stubImplementation">
			<bean class="org.ihtsdo.otf.im.utility.SecurityServiceStub"/>
		</property>
	</bean>
	
	<bean class="java.lang.Boolean" id="securityServiceStubMode" >
		<constructor-arg value="+{securityServiceStubMode}"/>
	</bean>

</beans>
