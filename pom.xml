<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.snomed.otf</groupId>
	<version>3.0.0-SNAPSHOT</version>
	<artifactId>reporting-engine</artifactId>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.1.RELEASE</version>
	</parent>

	<modules>
		<module>reporting-engine-worker</module>
		<module>schedule-manager</module>
	</modules>

	<properties>
		<java.version>1.8</java.version>
		<packageName>${project.artifactId}</packageName>
		<execFinalName>${project.build.finalName}.jar</execFinalName>
		<snowowl.version>4.8.0</snowowl.version>
		<otf.common.version>1.5.0-SNAPSHOT</otf.common.version>
		<spring.version>4.3.5.RELEASE</spring.version>
		<spring.security.version>3.2.5.RELEASE</spring.security.version>
		<spring.hateoas.version>0.11.0.RELEASE</spring.hateoas.version>
		<swagger.springmvc.version>0.9.3</swagger.springmvc.version>
		<springfox-swagger.version>2.7.0</springfox-swagger.version>
		<servlet.api.virgo.version>3.0.0.v201112011016</servlet.api.virgo.version>
		<xstream.version>1.4.3</xstream.version>
		<jackson.version>2.8.5</jackson.version><!-- This version is what spring-web pulls in -->
		<logback.virgo.version>1.0.7</logback.virgo.version>
		<slf4j.version>1.7.5</slf4j.version>
		<maven.test.skip>true</maven.test.skip>
	</properties>

	<repositories>
		<repository>
			<id>ihtsdo-releases</id>
			<releases><enabled>true</enabled></releases>
			<snapshots><enabled>false</enabled></snapshots>
			<url>https://maven.ihtsdotools.org/content/repositories/releases/</url>
		</repository>
		<repository>
			<id>ihtsdo-snapshots</id>
			<releases><enabled>false</enabled></releases>
			<snapshots><enabled>true</enabled></snapshots>
			<url>https://maven.ihtsdotools.org/content/repositories/snapshots/</url>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>ihtsdo-public-nexus</id>
			<name>IHTSDO Public Nexus Releases</name>
			<url>https://maven.ihtsdotools.org/content/repositories/releases/</url>
		</repository>
		<snapshotRepository>
			<id>ihtsdo-public-nexus</id>
			<name>IHTSDO Public Nexus Snapshots</name>
			<url>https://maven.ihtsdotools.org/content/repositories/snapshots/</url>
		</snapshotRepository>
	</distributionManagement>

</project>
