<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<import resource="jms-api-context.xml"/>

	<bean class="org.ihtsdo.snowowl.authoring.batchimport.api.SpringConfiguration"/>

	<bean class="org.ihtsdo.snowowl.authoring.batchimport.api.service.BatchImportService"/>
	
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="#{systemProperties['osgi.sharedConfiguration.area']}/single_authoring.properties"/>
		<property name="placeholderPrefix" value="+{"/>
	</bean>
	
	<bean class="org.ihtsdo.snowowl.authoring.batchimport.api.service.file.dao.ArbitraryFileService"/>
	
</beans>
